<% layout('layouts/boilerplate') %>
    <style>
        body {
            background: #00b09b;
            background: -webkit-linear-gradient(to right, #00b09b, #96c93d);
            background: linear-gradient(to right, #00b09b, #96c93d);
            min-height: 100vh;
        }
    </style>
    <% for (let room of rooms) {%>
        <div class="card mb-3 " style="color: whitesmoke;
            background-color: teal;">
            <div class="row">
                <div class="col-md-4">
                    <h2 class="card-title">
                        <%= room.username %>
                    </h2>
                </div>
                <div class="col-md-7">
                    <h4 class="card-text">
                        <%if(room.convos.length!=0){%>
                            <%=room.convos[room.convos.length-1].body%>
                                <%}else{%>
                                    NO MESSAGES
                                    <%}%>
                    </h4>

                </div>
                <div class="col-md-1">
                    <a href="/vendors/<%=room.vendorname%>/clients/<%=room.username%>"><i class="fa fa-comments-o"
                            style="font-size:48px;color:red"></i></a>
                </div>
            </div>
        </div>
        <% } %>