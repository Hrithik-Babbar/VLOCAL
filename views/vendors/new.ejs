<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Welcome Vendor!</h1>
        <div class="col-6 offset-3">
            <form action="/vendors" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="vendor[title]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="vendor[location]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="vendor[image]">
                </div>

                <div class="mb-3">
                    <label class="form-label" for="service">Service</label>
                    <textarea class="form-control" type="text" id="service" name="vendor[service]"></textarea>
                </div>
                <div class="mb-3"><button class="btn btn-success">Start your Journey</button></div>

            </form>
        </div>
    </div>